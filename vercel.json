{
  "rewrites": [
    { "source": "/admin", "destination": "/admin/index.html" },
    { "source": "/admin/(.*)", "destination": "/admin/$1" },
    { "source": "/usuarios", "destination": "/usuarios/index.html" },
    { "source": "/usuarios/(.*)", "destination": "/usuarios/$1" },
    { "source": "/visitante", "destination": "/visitante/index.html" },
    { "source": "/visitante/(.*)", "destination": "/visitante/$1" },
    { "source": "/", "destination": "/index.html" }
  ],
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        }
      ]
    }
  ]
}
